        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="नाम"
                    android:drawableLeft="@drawable/iocn1"
                    android:drawablePadding="4sp"
                    android:inputType="text"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="पिता / पति का नाम"
                    android:drawableLeft="@drawable/iocn1"
                    android:drawablePadding="4sp"
                    android:inputType="text"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="जन्म दिनाक*"
                    android:drawableLeft="@drawable/iocn2"
                    android:drawablePadding="4sp"
                    android:inputType="date"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/pad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="नौकरी/पद/व्यापार"
                    android:drawableLeft="@drawable/aa"
                    android:drawablePadding="4sp"
                    android:inputType="text"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="शहर का नाम*"
                    android:drawableLeft="@drawable/w"
                    android:drawablePadding="4sp"
                    android:inputType="text"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="पता*"
                    android:drawableLeft="@drawable/x"
                    android:drawablePadding="4sp"
                    android:inputType="text"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="व्हाट्स एप नंबर"
                    android:drawableLeft="@drawable/y"
                    android:drawablePadding="4sp"
                    android:inputType="number"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="मोबाइल नम्बर*"
                    android:drawableLeft="@drawable/y"
                    android:drawablePadding="4sp"
                    android:inputType="number"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ई-मेल*"
                    android:drawableLeft="@drawable/em"
                    android:drawablePadding="4sp"
                    android:inputType="textEmailAddress"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="तीर्थ क्षेत्र में क्या व्यवस्था होनी चाहिए? (आपके सुझाव)"
                    android:drawableLeft="@drawable/z"
                    android:drawablePadding="4sp"
                    android:inputType="text"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="क्या ‘णमो लोए सव्व साहूणं परिवार’ द्वारा की गई इस पहल की वर्तमान में आवश्कता है?"
                android:id="@+id/txt"
                />
                <RadioGroup
                    android:id="@+id/rg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rd3"
                        android:text="हां "/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rd4"
                        android:text=" ना"/>
                </RadioGroup>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="तीर्थ क्षेत्र में भोजन और कमरों की ऑनलाइन बुकिंग आरम्भ होनी चाहिए?"
                 android:id="@+id/txt0"  />
            <RadioGroup
                android:id="@+id/rg3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rd5"
                    android:text="हां "/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rd6"
                    android:text=" ना"/>
            </RadioGroup>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="जैन धर्म के साधु और उनके विहार की जानकारी ऑनलाइन होनी चाहिए?"
                android:id="@+id/txt01"  />
            <RadioGroup
                android:id="@+id/rg4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rd7"
                    android:text="हां "/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rd8"
                    android:text=" ना"/>
            </RadioGroup>
                    <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />
            <Button
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:id="@+id/brow"
                android:layout_width="wrap_content"
                android:text="Browse"
                android:background="@color/colorAccent"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/s_img"/>
            <Button
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SUBMIT"
                android:background="#c17521"
                android:onClick="onSubmitClick"
                android:id="@+id/btn1"/>

        </LinearLayout>
</LinearLayout>
</ScrollView>
